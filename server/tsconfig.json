{
	"include": [
		"src",
		"test",
		"scripts"
	],
	"ts-node": {
		"esm": true
	},
	"compilerOptions": {
		"outDir": "./dist",
		"module": "es2022",
		"target": "es2022",
		"allowJs": true,
		"esModuleInterop": true,
		"strict": true,
		"strictNullChecks": true,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"noImplicitAny": true,
		"noImplicitThis": true,
		"noImplicitReturns": true,
		"useUnknownInCatchVariables": true,
		"types": [
			"node"
		]
	}
}
